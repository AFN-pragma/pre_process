import pandas as pd
from ydata_profiling import ProfileReport

data = pd.read_csv('Tunisair_flights_dataset.csv')
print(data)
print(data.info())
print(type(data))
print(data.isnull().sum())
print(data.describe())#or we can use that one below.


profile = ProfileReport(data, title = 'TUNISAIR FLIGHT DELAY')
print(profile)
profile.to_file("THE DELAYS")

